pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh './build_and_test.sh'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        sh './build/deployment/prod/deploy_prod.sh'
                    } else if (env.BRANCH_NAME == 'staging') {
                        sh './build/deployment/staging/deploy_staging.sh'
                    }
                }
            }
        }
    }
    post {
        always {
            junit 'reports/**/*.xml'
            archiveArtifacts artifacts: 'build/**', allowEmptyArchive: true
        }
        success {
            mail to: 'team@example.com',
                 subject: "SUCCESS: ${env.JOB_NAME} [${env.BUILD_NUMBER}]",
                 body: "Good news! The build ${env.BUILD_NUMBER} was successful. Check it out at ${env.BUILD_URL}"
        }
        failure {
            mail to: 'team@example.com',
                 subject: "FAILURE: ${env.JOB_NAME} [${env.BUILD_NUMBER}]",
                 body: "Unfortunately, the build ${env.BUILD_NUMBER} failed. Please check the logs at ${env.BUILD_URL}"
        }
    }
}
